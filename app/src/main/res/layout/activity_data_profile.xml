<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DataProfileActivity"
    android:background="#FF9800">

    <LinearLayout
        android:background="#FFFF"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/male"/>

        <TextView
            android:id="@+id/fullnamaLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Nama Label"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_radius">

        <TextView
            android:id="@+id/nikData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/users"
            android:padding="8dp"
            android:drawablePadding="10dp"
            android:hint="Nik"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/userData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:drawableLeft="@drawable/id_karyawan"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tgl_masukData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:hint="Tanggal Masuk"
            android:gravity="center_vertical"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/jumlahDataCuti"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/calender"
            android:drawablePadding="10dp"
            android:hint="Jumlah Cuti"
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/levelData"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/status"
            android:drawablePadding="10dp"
            android:hint="Level"
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <Button
            android:id="@+id/ubah_profile"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:text="Ubah Data"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/bg_space"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>