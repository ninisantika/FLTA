<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF9800"
    tools:context=".Activity.FormCutiActivity">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bg_radius">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NIK"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/nik"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="10dp"
                android:hint="NIK"
                android:textSize="13sp"
                android:padding="10dp"
                android:editable="false" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tgl_awal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="Tanggal Awal"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:textSize="13sp"
                android:padding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tgl_akhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textSize="13sp"
                android:hint="Tanggal Akhir"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:text="Jenis Cuti"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <Spinner
                android:id="@+id/spiner_jenis"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:textAlignment="gravity" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/jumlah_cuti"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="Jumlah"
                android:textSize="13sp"
                android:padding="10dp"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/keterangan_cuti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="Keterangan"
                android:padding="10dp"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Status"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/status"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:drawablePadding="10dp"
                android:textColor="#ffff"
                android:editable="false"
                android:gravity="center"
                android:text="Pending"
                android:textSize="13sp"
                tools:ignore="Deprecated" />

        <Button
            android:id="@+id/submit_cuti"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="#FFFF"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_space" />

    </LinearLayout>

</LinearLayout>